each post in posts 
    .post-card
        h2=post.title
        h3="By, " + post.author
        p=post.content 
        form(action="/admin/approve", method="post") 
            input(type="hidden" name="postId" value=post.id)
            button.adminBtn(value="approve") Approve 
            button.adminBtn(value="decline") Decline 



